pipeline {
    agent any
	options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
				bat 'make'
				archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true 
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
				bat 'make check || true' 
                junit '**/target/*.xml'
            }
        }
        stage('Deploy') {
		when {
              expression {
                currentBuild.result == null || currentBuild.result == 'SUCCESS' 
              }
            }
            steps {
				echo 'Deploying....'
                sh 'make publish'
            }
			
        }
    }
}